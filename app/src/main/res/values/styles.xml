<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chipStyle">@style/AppTheme.Chip</item>
        <!--<item name="android:background">@color/red5</item>-->
        <item name="android:fontFamily">@font/aclonica</item>
    </style>

    <style name="AppTheme.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">@color/chip_icon</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <style name="AppTheme.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/roboto_mono_thin_italic</item>
    </style>

    <style name="AppTheme2" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/t2_colorPrimary</item>
        <item name="colorPrimaryDark">@color/t2_colorPrimaryDark</item>
        <item name="colorAccent">@color/t2_colorAccent</item>
        <item name="chipStyle">@style/AppTheme2.Chip</item>
        <!-- <item name="android:background">@color/red5</item>-->
    </style>

    <style name="AppTheme2.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">@color/t2_chip_icon</item>
        <item name="chipBackgroundColor">@color/t2_chip_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/t2_chip_stroke</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:textColor">@color/t2_chip_text</item>
        <item name="rippleColor">@color/t2_ripple</item>
    </style>

    <style name="AppTheme2.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/t2_colorPrimaryDark</item>
    </style>

</resources>
